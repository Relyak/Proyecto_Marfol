<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="mainActivity.menu.crudBd.detalle.DetalleEditarRestaurantesBd">
    <EditText
        android:id="@+id/etDetalleRestaurantes"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="180dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:textColor="@color/redBorder"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBorrarDetalleRestaurantes"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/button_borrar"
        android:text="@string/btnborrar_detalle"
        android:textColor="@color/yellowMargin"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDetalleRestaurantes"
        app:layout_constraintVertical_bias="0.232" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEditarDetalleRestaurantes"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/button_index"
        android:text="@string/btneditar_detalle"
        android:textColor="@color/redTitle"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDetalleRestaurantes"
        app:layout_constraintVertical_bias="0.232" />

</androidx.constraintlayout.widget.ConstraintLayout>