<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/background_style"
tools:context="mainActivity.detalle.RecordarPlatoActivity">

<!-- Title Actividad -->
<TextView
    android:id="@+id/tvTitleRecordar"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:fontFamily="serif"
    android:gravity="center"
    android:text="@string/recordar_plato"
    android:textColor="@color/redBorder"
    android:textSize="30sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.02"

    />



    <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rvPlatoRecordar"
    android:layout_width="350dp"
    android:layout_height="420dp"

    android:layout_marginTop="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.508"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tvTitleRecordar" />

    <TextView
        android:id="@+id/tvAnteriormenteRecordar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Platos aÃ±adidos anteriormente"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvPlatoRecordar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPersonaRecordarBd"
        android:layout_width="275dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAnteriormenteRecordar" />

</androidx.constraintlayout.widget.ConstraintLayout>