<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_style"
    tools:context="login.RegistroActivity">

    <EditText
        android:id="@+id/etTelefonoRegistro"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/row_platos_bd"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:hint="@string/telefono"
        android:inputType="phone"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:textColorHint="#474646"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNombreRegistro" />

    <EditText
        android:id="@+id/etNombreRegistro"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:hint="@string/nombre"
        android:textColor="@color/black"
        android:paddingLeft="5dp"
        android:textColorHint="#474646"
        android:background="@drawable/row_platos_bd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etRegistroEmailLogin" />

    <EditText
        android:id="@+id/etRegistroEmailLogin"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:paddingLeft="5dp"
        android:background="@drawable/row_platos_bd"
        android:hint="@string/prompt_email"
        android:textColor="@color/black"
        android:textColorHint="@color/redLight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/etRegistroPasswordLogin"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:paddingLeft="5dp"
        android:background="@drawable/row_platos_bd"
        android:hint="@string/prompt_password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/redLight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTelefonoRegistro" />

    <EditText
        android:id="@+id/etRegistroPasswordLogin2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:paddingLeft="5dp"
        android:hint="@string/repetirPassw"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:background="@drawable/row_platos_bd"
        android:textColorHint="@color/redLight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etRegistroPasswordLogin" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRegistrarseRegistro"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="@string/registrarse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/blueRestaurantes"
        app:layout_constraintHorizontal_bias="0.5"
        android:background="@drawable/row_gpt_restaurantes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etRegistroPasswordLogin2"
        app:layout_constraintVertical_bias="0.1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="159dp"
        android:layout_height="143dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_marfol" />

</androidx.constraintlayout.widget.ConstraintLayout>