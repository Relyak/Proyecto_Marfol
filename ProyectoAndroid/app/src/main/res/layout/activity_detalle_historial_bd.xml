<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_style"
    >

    <TextView
        android:id="@+id/tvHistorialFecha"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/row_platos_bd"
        android:fontFamily="serif"
        android:gravity="center"
        android:hint="Fecha"
        android:textColor="@color/purplePlatos"
        android:textColorHint="@color/purplePlatos"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintBottom_toTopOf="@+id/tvHistorialFecha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHistorialNombreRestaurante">

        <TextView
            android:id="@+id/tvHistorialFactura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="fonts/myfont.ttf"
            android:padding="16dp"
            android:textColor="#000000" />
    </ScrollView>

    <TextView
        android:id="@+id/tvHistorialNombreRestaurante"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/row_platos_bd"
        android:fontFamily="serif"

        android:gravity="center"
        android:hint="restaurante"
        android:padding="10dp"
        android:textColor="@color/purplePlatos"
        android:textColorHint="@color/purplePlatos"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>