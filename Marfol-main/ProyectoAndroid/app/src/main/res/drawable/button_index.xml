<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Agregar gradiente al borde -->
    <gradient
        android:startColor="#FFD85E"
        android:endColor="#FFAC5F"
        android:angle="90"
        android:type="linear" />

    <!-- Definir bordes redondeados -->
    <corners
        android:radius="15dp" />

    <!-- Definir borde -->
    <stroke
        android:width="10dp"
        android:color="@android:color/transparent" />


</shape>
