<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_style"
    android:orientation="vertical"
    android:padding="16dp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="148dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logo_marfol" />

    <TextView
        android:id="@+id/pvAboutUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:textColor="@color/redBorder"
        android:textSize="30sp"
        android:clickable="true"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/menu_about_us"/>

    <TextView
        android:id="@+id/tvOcultar1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.82" />

    <TextView
        android:id="@+id/tvEditarDatosIndex"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:clickable="true"
        android:fontFamily="serif"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/editar"
        android:textColor="@color/redBorder"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvOcultar2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.82" />
    <TextView
        android:id="@+id/tvHistorialIndex"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:clickable="true"
        android:fontFamily="serif"
        android:gravity="center"
        android:padding="8dp"
        android:text="Historial"
        android:textColor="@color/redBorder"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvOcultar3"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.82" />

    <TextView
        android:id="@+id/tvLogoutIndex"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:clickable="true"
        android:fontFamily="serif"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/logout"
        android:textColor="@color/redBorder"
        android:textSize="30sp" />


</LinearLayout>