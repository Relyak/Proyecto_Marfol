<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pipopup_check"
    android:orientation="vertical"
    android:padding="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/btnCancelarPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_index"
            android:text="@string/pop_up_camara"
            android:textColor="@color/redBorder"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/btnConfirmarPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_index"
            android:text="@string/pop_up_galeria"
            android:textColor="@color/redBorder"
            android:textSize="18sp"
            />

    </LinearLayout>

</LinearLayout>